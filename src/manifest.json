{
  "name": "Cappy.Dev",
  "version": "0.3.2",
  "manifest_version": 2,
  "description": "Screenshot the current page and share with fellow humans!",
  "background": {
    "scripts": [
      "node_modules/jquery/dist/jquery.min.js",
      "js/constants.js",
      "js/background.js",
      "js/background-uploader.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "images/icon.dev.png",
    "default_popup": "popup.html",
    "default_title": "Hi"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": false
  }
}